<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@1.12.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
</head>

<body>
    <div class="container theme-showcase" role="main">

        <div>
            <%= message %>
        </div>
        <ul>
            <% item.forEach(function(i){ %>
            <li>
                <%= i %>
            </li>
            <% }) %>
        </ul>
        <h1>Flying Basketball按钮统计！</h1>
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" onclick="clickRadio()">Flying Basketball游戏</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li id='day1' class="active"><a onclick="clickDay1()">1天</a></li>
                        <li id='day7'><a onclick="clickDay7()">7天</a></li>
                        <li id='day30'><a onclick="clickDay30()">30天</a></li>
                        
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </nav>
        <h4 class="sub_title">趋势图</h4>
        <div class="col-md-15">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>时间</th>
                        <th>点击次数</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>11</td>
                        <td>3</td>
                    </tr>
                    <tr>
                        <td>22</td>
                        <td>4</td>
                    </tr>
                    <tr>
                        <td>33</td>
                        <td>5</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <script type="text/javascript">
        function clickRadio() {
            console.log('hi')
        }

        function clickDay1() {
            console.log('1天')
        }

        function clickDay7() {
            console.log('7天')
            document.getElementById('day7').class = 'active';
        }

        function clickDay30() {
            console.log('30天')
        }

        function clickDay90() {
            console.log('90天')
        }
    </script>
</body>

</html>